#!/usr/bin/env python3
"""
Simple Runner for Enhanced PL Predictor
Use this for the minimal 3-file setup
"""

import os
from datetime import datetime

def main():
    print("\n" + "=" * 50)
    print("ğŸˆ Enhanced Premier League Predictor")
    print("=" * 50)
    print(f"ğŸ“… {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}")
    
    # Check if required files exist
    if not os.path.exists("matches.csv"):
        print("âŒ ERROR: matches.csv not found!")
        print("ğŸ“‹ Please ensure matches.csv is in the same directory")
        return
    
    if not os.path.exists("pl_predictor.py"):
        print("âŒ ERROR: pl_predictor.py not found!")
        print("ğŸ“‹ Please ensure pl_predictor.py is in the same directory")
        return
    
    print("âœ… Required files found")
    
    try:
        # Import and run predictor
        from pl_predictor import EnhancedPLPredictor
        
        print("ğŸ”„ Loading data and initializing predictor...")
        predictor = EnhancedPLPredictor("matches.csv")
        
        print("ğŸ§  Running complete analysis...")
        print("   This may take 30-60 seconds...")
        results = predictor.run_complete_analysis()
        
        # Show quick summary
        print("\n" + "=" * 50)
        print("ğŸ“ˆ QUICK RESULTS SUMMARY")
        print("=" * 50)
        
        best_model = max(results.items(), key=lambda x: x[1]['precision'])
        print(f"ğŸ† Best Model: {best_model[0]}")
        print(f"   Precision: {best_model[1]['precision']:.1%}")
        print(f"   Accuracy:  {best_model[1]['accuracy']:.1%}")
        
        print(f"\nğŸ“Š All Models:")
        for model_name, model_results in results.items():
            print(f"   {model_name}: {model_results['precision']:.1%} precision")
        
        print(f"\nğŸš€ Key Improvements:")
        print(f"   âœ… Multiple ML algorithms")
        print(f"   âœ… ELO ratings & rolling stats")
        print(f"   âœ… Cross-validation")
        print(f"   âœ… Feature importance analysis")
        
        print("\nâœ… Analysis completed successfully!")
        print("ğŸ’¡ Check the generated plots for feature importance")
        
    except ImportError as e:
        print(f"âŒ Import Error: {e}")
        print("ğŸ“¦ Please install required packages:")
        print("   pip install pandas numpy matplotlib seaborn scikit-learn")
        
    except Exception as e:
        print(f"âŒ Error: {e}")
        print("ğŸ” Please check your files and try again")

if __name__ == "__main__":
    main()